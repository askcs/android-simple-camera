<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Widget.SimpleCamera.Button" parent="android:Widget.ImageButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/sc_button_padding</item>
    <item name="android:layout_marginLeft">@dimen/sc_button_margin</item>
    <item name="android:layout_marginRight">@dimen/sc_button_margin</item>
  </style>

  <style name="Widget.SimpleCamera.Button.TakePicture">
    <item name="android:background">@drawable/sc_rectangle_rounded_positive</item>
    <item name="android:src">@drawable/ic_camera</item>
  </style>

  <style name="Widget.SimpleCamera.Button.RecordVideo">
    <item name="android:background">@drawable/sc_rectangle_rounded_neutral</item>
    <item name="android:src">@drawable/ic_video</item>
  </style>

  <style name="Widget.SimpleCamera.Button.StopRecording">
    <item name="android:background">@drawable/sc_rectangle_rounded_negative</item>
    <item name="android:src">@drawable/ic_stop</item>
  </style>

  <style name="Widget.SimpleCamera.Button.SwitchCamera">
    <item name="android:background">@drawable/sc_rectangle_rounded_neutral</item>
    <item name="android:src">@drawable/ic_camera_switch</item>
  </style>

  <style name="Widget.SimpleCamera.Button.Reject">
    <item name="android:background">@drawable/sc_rectangle_rounded_negative</item>
    <item name="android:src">@drawable/ic_action_cancel</item>
  </style>

  <style name="Widget.SimpleCamera.Button.Accept">
    <item name="android:background">@drawable/sc_rectangle_rounded_positive</item>
    <item name="android:src">@drawable/ic_action_accept</item>
  </style>

</resources>